<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - MJ13</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <style>
        h1, h2{
            color: #c03b7a;
        }
        h3, h4 {
            color: #703e8f;
        }
        p, th, td {
            color: #141e4d;
        }
        body{
            background-color: #eedd79;
        }
        .form-group, .dl-horizontal {
            color: #703e8f;
        }
    </style>
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Ministerio J13", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Inicio", "Index", "Home")</li>
                    <li>@Html.ActionLink("Acerca de", "About", "Home")</li>
                    <li>@Html.ActionLink("Contacto", "Contact", "Home")</li>

                    <li>@Html.ActionLink("Miembros", "Index", "Miembro")</li>
                    <li>@Html.ActionLink("Lideres", "Index", "Lider")</li>
                    <li>@Html.ActionLink("Predicadores", "Index", "Predicador")</li>
                    <li>@Html.ActionLink("Programas", "Index", "Programa")</li>
                    <li>@Html.ActionLink("Tareas", "Index", "Tarea")</li>
                    <li>@Html.ActionLink("Actividades", "Index", "Actividad")</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Ministerio J13</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
